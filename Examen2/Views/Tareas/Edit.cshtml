@model Examen2.Models.ToDo

@{
    ViewData["Title"] = "Editar Tarea";
}

<h1>Editar</h1>
<hr>
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-10">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TareaId" />
            <div class="form-group">
                <label asp-for="TareaName" class="control-label"></label>
                <input asp-for="TareaName" class="=form-control" />
                <span asp-validation-for="TareaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TareaFechaInicio" class="control-label"></label>
                <input asp-for="TareaFechaInicio" class="=form-control" type="date" />
                <span asp-validation-for="TareaFechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TareaFechaFinal" class="control-label"></label>
                <input asp-for="TareaFechaFinal" class="=form-control" type="date" />
                <span asp-validation-for="TareaFechaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TareaTipoLista" class="control-label"></label>
                <input asp-for="TareaTipoLista" class="=form-control" />
                <span asp-validation-for="TareaTipoLista" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Index" class=" btn btn-warning">Regresar</a>

        </div>
    </form>
</div>

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
