@model IEnumerable<Examen2.Models.Lists>

@{
    ViewData["Title"] = "Listado de tareas";
}




<h2>Listas de tareas</h2>
<div class="row search">
    <div class="col-auto">
        <input type="text" class="form-control-plaintext" id="txt-search" placeholder="Buscar..."/>
    </div>
    <div class="col-auto">
        <a class="btn btn-success" onclick="listas_search()" id="search-link"><i class="fas fa-search"></i>Buscar</a>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-square"></i> Nuevo</a>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListId)
                    @Html.DisplayNameFor(model => model.ListName)
                </th>
                <th> </th>
            </tr>


        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ListId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ListName)</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ListId"><i class="fas fa-edit"></i> Editar</a>
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@item.ListId"><i class="fas fa-info-circle"></i> Detalles</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ListId"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>

                     
            }
                         
        </tbody>
    </table>

</div>


@*@<link rel="stylesheet" href="~/css/common.css" />*@
<script src="~/js/Lists.js" asp-append-version="true"></script>








